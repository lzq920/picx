@import "../../style/base.styl"

.nav {
  position relative
  width 100%
  height 100%
  box-sizing border-box
  background var(--background-color)

  ul.nav-list {
    padding 0
    margin 0

    li.nav-item {
      box-sizing border-box
      width 100%
      height 76rem
      cursor pointer

      &.active {
        font-weight bold
        background var(--second-background-color)
      }

      .nav-content {
        display flex
        flex-direction column
        justify-content center
        align-items center

        .nav-icon {
          font-size 26rem
        }

        .nav-name {
          margin-top 5rem
          font-size 12rem
        }
      }
    }

  }

}
