@import "../../style.styl"

.copy-external-link-box {
  position relative
  width 100%
  height 100%
  box-sizing border-box
  display flex
  justify-content space-between
  align-items flex-end
  padding 2px

  .markdown-icon-box {
    position absolute
    bottom -9px
    cursor pointer
  }

  .btn-item {
    box-sizing border-box
    border-radius 5px
    font-size 12px
    margin-left 6px
    cursor pointer
    transition all 0.3s ease
  }

  .copy-url {
    padding 1px 3px
    border 1px solid $default-font-color
    color $default-font-color

    &:hover {
      background $default-font-color
      color $background-color
    }
  }


}
